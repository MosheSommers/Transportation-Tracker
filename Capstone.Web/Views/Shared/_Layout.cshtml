@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CLE|omnibus - @ViewBag.Title</title>
    <link href="~/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="navbar-brand">@Html.ActionLink("CLE|omnibus", "Index", "Home")</span>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Routes", "Index", "Route")</li>
                        <li>@Html.ActionLink("Create Route", "Create", "Route")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @{
                            if (false)                                  // if logged in (add check to session for username)
                            {
                                <li><a href="#">Username</a></li>       // Get Username from Session
                                <li><a href="#">Logout</a></li>         // Link to dump session and reload page
                            }
                            else                                        // if not logged in
                            {
                                <li>@Html.ActionLink("Register", "Register", "User")</li>
                                <li>@Html.ActionLink("Login", "Index", "User")</li>
                            }
                        }
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
    </div>
    @RenderBody()
</body>
</html>
